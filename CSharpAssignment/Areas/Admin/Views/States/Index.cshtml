@using PagedList.Mvc
@model  PagedList.IPagedList<CSharpAssignment.Models.Data.StateModel>

@{
    ViewBag.Title = "States";
}

<div>

    @*Page Title*@
    <div class="d-flex justify-content-between py-4 border-bottom border-danger">
        <h4 class="my-auto">State List</h4>
        <button style="all:unset;" data-toggle="modal" data-target="#add-modal"><i class="btn-sm btn-warning material-icons">add</i></button>
    </div>

    @*Table Starts From Here*@
    <table class="table table-striped" style="width:fit-content;">

        @*Table Headings Starts From Here*@
        <tr>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().Name)</th>
            <th class="text-center">Actions</th>
        </tr>
        @*Table Heading Ends Here*@

        @foreach (var item in Model) {

            <tr>
                <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @*Edit Button*@
                    <button onclick="GetDetails()" style="all:unset;" data-toggle="modal" data-target="#edit-modal"><i class="btn-sm btn-warning material-icons">create</i></button>
                    @*Details Button*@
                    <button onclick="GetDetails()" style="all:unset;" data-toggle="modal" data-target="#details-modal"><i class="btn-sm btn-info material-icons">reorder</i></button>
                    @*Delete Button*@
                    <button onclick="GetDetails()" style="all:unset;" data-toggle="modal" data-target="#delete-modal"><i class="btn-sm btn-danger material-icons">delete</i></button>
                </td>
            </tr>
        }

    </table>
    @*Table Ends Here*@

    @*Add Modal Starts From Here*@
    <div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="add-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="add-modal-label">Add State</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="Name" class="col-form-label">State Name : </label>
                            <input name="Name" type="text" class="form-control border" id="Name">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancle</button>
                    <button type="button" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    </div>
    @*Add Modal Ends Here*@

    @*Edit Modal Starts From Here*@
    <div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="edit-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="edit-modal-label">Edit State</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="Name" class="col-form-label">State Name : </label>
                            <input name="Name" type="text" class="form-control border" id="Name">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancle</button>
                    <button type="button" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>
    @*Edit Modal Ends Here*@

    @*Details Modal Starts From Here*@
    <div class="modal fade" id="details-modal" tabindex="-1" role="dialog" aria-labelledby="details-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="details-modal-label">State Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>State Id</dt>
                                <dd>Whatever</dd>
                                <dt>State Name</dt>
                                <dd>Whatever</dd>
                                <dt>Created Date</dt>
                                <dd>Whatever</dd>
                                <dt>Update Date</dt>
                                <dd>Whatever</dd>
                            </dl>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @*Details Modal Ends Here*@

    @*Delete Modal Starts From Here*@
    <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="delete-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header alert alert-danger">
                    <h5 class="modal-title" id="delete-modal-label">Are you sure you want to delte this state ?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>State Id</dt>
                                <dd>Whatever</dd>
                                <dt>State Name</dt>
                                <dd>Whatever</dd>
                                <dt>Created Date</dt>
                                <dd>Whatever</dd>
                                <dt>Update Date</dt>
                                <dd>Whatever</dd>
                            </dl>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
    @*Delete Modal Ends From Here*@

    @*Pagination*@
    <div>
        <ul class="pagination pagination-lg">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
                        new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                        })
        </ul>
    </div>

</div>
