@using PagedList.Mvc;
@model PagedList.IPagedList<CSharpAssignment.Models.Data.CustomerModel>

@{
    ViewBag.Title = "Index";
}
<div>

    <div class="d-flex justify-content-between p-3">
        <h4 class="pt-3 mt-1">Customer List</h4>
        <a href="/Admin/Customer/Create" class="btn btn-primary"><i class="mt-2 material-icons">add</i></a>
        @*@Html.ActionLink("Create New", "Create", "Customer", null, new { @class = "btn btn-primary" })*@
    </div>

    <table class="table table-striped">

        <tr>
            <th class="text-center align-middle">@Html.DisplayNameFor(model => model.First().Name)</th>
            <th class="text-center align-middle">@Html.DisplayNameFor(model => model.First().EmailId)</th>
            <th class="text-center align-middle">@Html.DisplayNameFor(model => model.First().PhoneNo)</th>
            <th class="text-center align-middle">@Html.DisplayNameFor(model => model.First().IsActive)</th>
            <th class="text-center align-middle">Actions</th>
        </tr>

        @foreach (var item in Model) {

            <tr>
                <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.EmailId)</td>
                <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.PhoneNo)</td>
                <td class="text-center align-middle">
                    @if (item.IsActive == true) {
                        <span class="p-2 w-100 badge badge-success">Active</span>
                    } else {
                        <span class="p-2 w-100 badge badge-danger">Not Active</span>
                    }
                </td>

                <td>

                    <a href="/Customer/Edit/@item.CustomerId" class="btn btn-warning"><i class="mt-2 material-icons">create</i></a>
                    <a href="/Customer/Details/@item.CustomerId" class="btn btn-info"><i class="mt-2 material-icons">reorder</i></a>
                    <a href="/Customer/Delete/@item.CustomerId" class="btn btn-danger"><i class="mt-2 material-icons">delete</i></a>

                    @*@Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Details", "Details", new { id = item.CustomerId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId }, new { @class = "btn btn-danger" })*@

                </td>

            </tr>

        }

    </table>

    <div>
        <ul class="pagination pagination-lg">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
                        new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                        })
        </ul>
    </div>

</div>