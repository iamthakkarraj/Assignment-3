@using PagedList.Mvc;
@model PagedList.IPagedList<CSharpAssignment.Models.Data.CustomerModel>

@{
    ViewBag.Title = "Index";
}

<div>

    @*Page Title*@
    <div class="d-flex justify-content-between py-4">
        <h4 class="pt-3 mt-1">Customer List</h4>
        <a href="/Customers/Create"><i class="btn btn-primary material-icons">add</i></a>
    </div>

    <div class="row">
        @Html.EditorFor(model => model)
    </div>

    @*Details Modal Starts From Here*@
    <div class="modal fade" id="details-modal" tabindex="-1" role="dialog" aria-labelledby="details-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="details-modal-label">Customer Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>Customer Id</dt>
                                <dd>Whatever</dd>
                                <dt>Customer Name</dt>
                                <dd>Whatever</dd>
                                <dt>Customer Email-Id</dt>
                                <dd>Whatever</dd>
                                <dt>Phone No.</dt>
                                <dd>Whatever</dd>
                                <dt>Date Of Birth</dt>
                                <dd>Whatever</dd>
                                <dt>Status</dt>
                                <dd>Whatever</dd>
                                <dt>Created Date</dt>
                                <dd>Whatever</dd>
                                <dt>Update Date</dt>
                                <dd>Whatever</dd>
                            </dl>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @*Details Modal Ends Here*@

    @*Delete Modal Starts From Here*@
    <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="delete-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header alert alert-danger">
                    <h5 class="modal-title" id="delete-modal-label">Are you sure you want to delte this Customer ?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>Customer Id</dt>
                                <dd>Whatever</dd>
                                <dt>Customer Name</dt>
                                <dd>Whatever</dd>
                                <dt>Customer Email-Id</dt>
                                <dd>Whatever</dd>
                                <dt>Phone No.</dt>
                                <dd>Whatever</dd>
                                <dt>Date Of Birth</dt>
                                <dd>Whatever</dd>
                                <dt>Status</dt>
                                <dd>Whatever</dd>
                                <dt>Created Date</dt>
                                <dd>Whatever</dd>
                                <dt>Update Date</dt>
                                <dd>Whatever</dd>
                            </dl>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
    @*Delete Modal Ends From Here*@

    @*Pagination*@
    <div>
        <ul class="pagination pagination-lg">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
                        new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                        })
        </ul>
    </div>

</div>
